<Page
    x:Class="UWP_MultiFieldsMeter.BarcodeScanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_MultiFieldsMeter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:anyline="using:Anyline.SDK.Views">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderBrush="White" BorderThickness="2">
        <anyline:ScanView x:Name="AnylineScanView" />
        <ToolTip x:Name="ttScanBarcode" Content="Scan the Barcode" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,200" Background="#32adff" Foreground="White" />
    </Grid>
</Page>
